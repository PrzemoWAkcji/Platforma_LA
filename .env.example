# Zmienne środowiskowe dla Platforma_LA

# Port, na którym działa serwer
PORT=5432

# Adres URL połączenia z bazą danych PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:pomidorowa@localhost:5432/platforma_la?schema=public"
# Sekret do podpisywania tokenów JWT (zmień na bezpieczny, losowy ciąg znaków w produkcji)
JWT_SECRET="bardzo-tajny-sekret"

# Czas ważności tokenu JWT (np. 1h, 7d)
JWT_EXPIRES_IN="1d"

# Środowisko (development, test, production)
NODE_ENV=development 